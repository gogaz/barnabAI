# Database Configuration
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Slack OAuth Configuration
# Get these from: https://api.slack.com/apps
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=

# Slack Socket Mode
# Get this from: https://api.slack.com/apps -> Your App -> Socket Mode
SLACK_APP_TOKEN=

# GitHub OAuth Configuration
# Get these from: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# AI Provider Configuration
# Supported: gemini, openai
AI_PROVIDER=gemini

# Gemini Configuration (default)
# Get this from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=
GEMINI_MODEL=gemini-pro

# OpenAI Configuration (optional, if using openai provider)
# Get this from: https://platform.openai.com/api-keys
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4

# Optional: ActiveRecord::Encryption Keys
# If not set, will use Rails secret_key_base as fallback (works but not recommended for production)
# Generate with: openssl rand -hex 32 (for each key)
# These encrypt sensitive tokens stored in the database
ACTIVE_RECORD_ENCRYPTION_PRIMARY_KEY=
ACTIVE_RECORD_ENCRYPTION_DETERMINISTIC_KEY=
ACTIVE_RECORD_ENCRYPTION_KEY_DERIVATION_SALT=

# Optional: Enable Socket Mode on startup
# Set to 'true' to automatically start Socket Mode connection on app boot
ENABLE_SLACK_SOCKET_MODE=false
